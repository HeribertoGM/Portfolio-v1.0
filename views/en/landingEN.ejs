<!-- pre -->
<%- include('../general/pre') -%>

<!-- custom CSS -->
<link rel="stylesheet" type="text/css" href="/static/css/landing.css">

<title>HeribertoGM - Home</title>
</head>
<body>

<!-- Barra de navegacion -->
<%- include('./navbarEN') -%>
	
<!-- Seccion primera -->
<section>
	<div class="d-flex justify-content-center align-items-center" id="sec1">
		<div id="header">
			<h1 class="display-1">Hi, I'm Heriberto</h1>
			<h1 class="text-muted" id="subtitle"> and i love coding in <span class="txt-rotate" data-period="2000" data-rotate='[ "Python.", "Java.", "C++.", "C.", "C#.", "HTML.", "CSS.", "JavaScript." ]'></span></h1>
		</div>
	</div>
</section>

<hr>
<!-- Seccion Proyectos -->
<section id="sec2">
	<h1 class="display-4" id="titulProyect">Projects</h1>
	<br>
	<div class="container">
		<% let objs = data.filter((i) => { return i.landingFlag }); %>
		<% objs.reverse(); %>
		<div class="row">
			<div class="col h-100">
				<a href="/en/projects/<%- objs[0].id %>">
					<img class="img-fluid h-100" src="<%- objs[0].img %>" id="scale-up-tl">
					<h1 id="topizq"><%- objs[0].titleEN %>-<%- objs[0].id %></h1>
					<h1 id=tl-text><%- objs[0].titleEN %></h1>
					<h3 class="text-muted"  id="tl-text">
						<% for(let i of objs[0].tags){ %>
							<%- i.in %> 
						<% } %>
					</h3>
					<h5 class="text-break" id="tl-text"><%- objs[0].infoEN %></h5>
				</a>
			</div>
			<div class="col h-100">
				<a href="/en/projects/<%- objs[1].id %>">
					<img class="img-fluid h-100" src="<%- objs[1].img %>" id="scale-up-tr">
					<h1 class="text-right" id="topder"><%- objs[1].titleEN %>-<%- objs[1].id %></h1>
					<h1 class="text-right" id=tr-text><%- objs[1].titleEN %></h1>
					<h3 class="text-right text-muted"  id="tr-text">
						<% for(let i of objs[1].tags){ %>
							<%- i.in %> 
						<% } %>
					</h3>
					<h5 class="text-right" id="tr-text"><%- objs[1].infoEN %></h5>
				</a>
			</div>
		</div>
		<div class="row">
			<div class="col h-100">
				<a href="/en/projects/<%- objs[2].id %>">
					<img class="img-fluid h-100" src="<%- objs[2].img %>" id="scale-up-bl">
					<h1 id="botizq"><%- objs[2].titleEN %>-<%- objs[2].id %></h1>
					<h1 id=bl-text><%- objs[2].titleEN %></h1>
					<h3 class="text-muted"  id="bl-text">
						<% for(let i of objs[2].tags){ %>
							<%- i.in %> 
						<% } %>
					</h3>
					<h5 class="text-break" id="bl-text"><%- objs[2].infoEN %></h5>
				</a>
			</div>
			<div class="col h-100">
				<a href="/en/projects/<%- objs[3].id %>">
					<img class="img-fluid h-100" src="<%- objs[3].img %>" id="scale-up-br">
					<h1 class="text-right" id="botder"><%- objs[3].titleEN %>-<%- objs[3].id %></h1>
					<h1 class="text-right" id=br-text><%- objs[3].titleEN %></h1>
					<h3 class="text-right text-muted"  id="br-text">
						<% for(let i of objs[3].tags){ %>
							<%- i.in %> 
						<% } %>
					</h3>
					<h5 class="text-right text-break" id="br-text"><%- objs[3].infoEN %></h5>
				</a>
			</div>
		</div>
	</div>
</section>

<hr>

<!-- Seccion contactos -->
<section class="d-flex justify-content-center align-items-center" id="sec3">
	<div class="container h-75 pt-3" id="cont3"> <!-- cubo gris -->
		<div class="d-flex justify-content-center row-auto">
			<h1>Contact me</h1>
		</div>
		<div class="row h-75 p-4">
			<a class="col classContact" href="#">
				<div class="d-flex justify-content-center align-items-center h-100">
					<div class="p-4">
						<img src="/static/images/linkedin.svg" width="120" height="120">
						<h3>LinkedIn</h3>
					</div>
				</div>
			</a>
			<a class="col classContact" href="https://github.com/HeribertoGM">
				<div class="d-flex justify-content-center align-items-center h-100">
					<div class="p-4">
						<img src="/static/images/github.svg" width="120" height="120">
						<h3>Github</h3>
					</div>
				</div>
			</a>
			<a class="col classContact" onclick="copyToClipboard()" onmouseenter="appearMail()" onmouseleave="disappearMail()">
				<div class="d-flex justify-content-center align-items-center h-100">
					<div class="p-4">
						<img src="/static/images/mail.svg" width="120" height="120">
						<h3 id="mail">Mail</h3>
					</div>
				</div>
			</a>
		</div>
	</div>
</section>

<!-- footer -->
<%- include('./footerEN') -%>

<!-- custom js -->
<script type="text/javascript" src="/static/js/carousel.js"></script>
<script type="text/javascript" src="/static/js/mail.js"></script>

